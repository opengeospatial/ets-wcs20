										<wcs:CoverageId>
											<xsl:value-of select="."/>
										</wcs:CoverageId>
									</wcs:DescribeCoverage>
								</ctl:body>
								<ctlp:SOAPParser return="content">
									<ctlp:XMLValidatingParser>
										<ctlp:schemas>
